<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SyroeshkaRu Панель управления</title>
	<link rel="shortcut icon" href="~/favicon.ico">
	<environment include="Development">
		<link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/node_modules/font-awesome/css/font-awesome.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/dev/css/admin.css" asp-append-version="true" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/styles/css/admin.min.css" asp-append-version="true" />
	</environment>
</head>
<body>
	<div class="content d-flex align-items-stretch shadow-lg">
		<div class="left-flex">
			<partial name="_LeftMenu" />
		</div>
		<div class="right-flex">
			<header class="section-nav">
				<partial name="_MainMenu" />
			</header>
			<main class="section-main">
				@RenderBody()
			</main>
		</div>
	</div>

	<footer class="container-fluid">
		<div class="footer-bottom">
			<div class="row">
				<div class="col-4">
					<p>&copy; 2019 SyroeshkaRu Парель управления v1.0</p>
				</div>
				<div class="col-8">
					<p>Разработано <span><a target="_blank" href="http://www.themeum.com">mail@cs-development.ru</a></span></p>
				</div>
			</div>
		</div>
	</footer>

	<environment include="Development">
		<script src="~/node_modules/jquery/dist/jquery.js" asp-append-version="true"></script>
		<script src="~/node_modules/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/systemjs/0.21.0/system.js" asp-append-version="true"></script>
		<script src="~/dev/js/admin.boot.js" asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/scripts/js/admin.min.js" asp-append-version="true"></script>
	</environment>

	@RenderSection("Scripts", required: false)
</body>
</html>
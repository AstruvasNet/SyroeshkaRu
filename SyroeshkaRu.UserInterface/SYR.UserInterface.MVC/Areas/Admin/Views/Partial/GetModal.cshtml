@model int

<form asp-antiforgery="true">
	@switch (Model)
	{
		case 0:	<div class="modal-header alert-success"></div>
			<div class="modal-body"></div>
			<div class="modal-footer">
				<button class="btn btn-success btn-sm">Закрыть</button>
			</div>
			break;
		case 1:
			<div class="modal-header alert-danger"></div>
			<div class="modal-body"></div>
			<div class="modal-footer">
				<button class="btn btn-danger btn-sm">Закрыть</button>
			</div>
			break;
	}
</form>
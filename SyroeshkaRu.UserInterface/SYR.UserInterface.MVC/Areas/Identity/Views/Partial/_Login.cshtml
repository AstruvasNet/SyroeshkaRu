@model LoginViewModel

<div class="login-form">
	<h2>Авторизация</h2>
	<form asp-route="account" asp-route-action="login" class="login-form">
		<input asp-for="UserName" placeholder="Login"/>
		<input asp-for="Password" placeholder="Password"/>
		<span> 
			<input asp-for="RememberMe" type="checkbox" class="checkbox">
			Запомнить
		</span>
		<button type="submit" class="btn btn-default">Войти</button>
	</form>
</div>
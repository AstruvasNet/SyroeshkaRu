@model LoginViewModel

<div class="login-form">
	<h2>Авторизация</h2>
	<form asp-route="account" asp-route-action="login" asp-antiforgery="true" class="login-form">
		<div class="login-error"></div>
		<input asp-for="UserName" placeholder="Login" />
		<input asp-for="Password" placeholder="Password" />
		<span>
			<input asp-for="RememberMe" type="checkbox" class="checkbox">
			Запомнить
		</span>
		<div class="row">
			<a asp-route="">Сброс пароля</a>
		</div>
		<div class="form-inline row">
			<div class="form-group">
				<button type="submit" class="btn btn-default">Войти</button>
			</div>
			<div class="form-group">
				<button type="button" asp-route="account" asp-route-action="register" class="btn btn-default">Регистрация</button>
			</div>
		</div>
	</form>
</div>
<form asp-route="account" asp-route-action="login">
	<div class="row">
		<div class="col-12">
			<div class="row">
				<div class="col-6">
					<div class="card">
						<div class="card-header">
							<div class="card-title">
								<h6>Вход в систему</h6>
							</div>
						</div>
						<div class="card-body">
							<div class="form-group col-12">
								<label asp-for="UserName" class="col-6 col-form-label col-form-label-sm"></label>
								<div class="col-6">
									<input asp-for="UserName" class="form-control form-control-sm" />
								</div>
							</div>
							<div class="form-row">
								<div class="form-group">
									<label asp-for="Password" class="col-form-label col-form-label-sm"></label>
									<input asp-for="Password" class="form-control form-control-sm" />
								</div>
							</div>
							<div class="form-check">
								<input asp-for="RememberMe" class="form-check-input" type="checkbox" />
								<label asp-for="RememberMe" class="form-check-label col-form-label-sm"></label>
							</div>
						</div>

						<div class="card-footer">
							<button type="submit" class="btn btn-success btn-sm" ui-role="submit">Войти</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>